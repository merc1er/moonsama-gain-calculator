<!DOCTYPE html>
<html>
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <meta name="author" content="Corentin Mercier">
  <meta name="description" content="">

  <!-- CSS -->
  <link rel="stylesheet" type="text/css" href="/static/css/style.css">

  <title>Moonsama Minecraft Gain Calculator</title>
</head>

<body class="bg-gray-900 text-white" x-data="{ movrPrice: '' }">

  {# Navbar #}
  <nav class="bg-gray-800">
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
      <div class="relative flex items-center justify-between h-16">

        <div class="flex-1 flex items-center sm:items-stretch justify-start">
          <div class="sm:ml-6">
            <div class="flex space-x-4">
              <a href="#" class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium" aria-current="page">MMGC</a>
            </div>
          </div>
        </div>

        <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">

          <!-- MOVR price ticker -->
          <div class="ml-3 relative">
            <div class="flex">
              <span
                class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium mr-2" id="movrPrice"
                x-init="
                  response = await fetch('https://api.zenlink.pro/rpc', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                      'id': 0,
                      'jsonrpc': '2.0',
                      'method': 'rateHistory.get',
                      'params': [
                        '2023-255-0x98878b06940ae243284ca214f92bb71a2b032b8a',
                        '2023-255-0xe3f5a90f9cb311505cd691a46596599aa1a0ad7d',
                        '1650285277',
                        '1650371677',
                        '900'
                      ]
                    })
                  })
                  data = await response.json()

                  movrPrice = data.result.slice(-1)[0].rate.toFixed(2)
                "
                x-text="`$${movrPrice}`"
              >
                -
              </span>
              <span class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-expanded="false" aria-haspopup="true">
                <img class="h-8 w-8 rounded-full" src="/static/img/movr.png" alt="Moonriver logo">
              </span>
            </div>
          </div>
          <!-- /MOVR price ticker -->

        </div>
      </div>
    </div>

  </nav>
  {# /Navbar #}

  <section class="max-w-7xl mx-auto">
    {% block body %}{% endblock %}
  </section>

  <footer class="mt-10"></footer>

  <!-- JavaScript -->
  <script src="/static/js/main.js"></script>

</body>
</html>
